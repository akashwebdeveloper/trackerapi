<div class="row">
    <div class="col-sm-4"></div>
    <div class="col-sm-4">
        <div style="margin-top: 150px;"></div>
        <div class="card shadow-lg p-3 mb-5 bg-white rounded">
            <div class="card-header">
                <img src="/img/logo.png" id="icon" alt="User Icon" width="50%"/>
            </div>
              <div class="card-body">
                <form action="/admin/login" method="POST">
                    <% if(messages.error) { %>
                        <span class="text-danger font-weight-bold mx-2"><%= messages.error %></span>
                        <% } %>
                    
                    <div class="form-group">
                        <input type="email" name="email" class="form-control new" id="" placeholder="Email Address">
                    </div>
                    <div class="form-group">
                        <input type="password" name="password" class="form-control new" id="" placeholder="******************">
                    </div>
                    <input type="submit" class="form-control btn btn-primary mt-2" value="Log In">
                </form>
          </div>
        </div>
    </div>
    <div class="col-sm-4"></div>
</div>

<!-- Login Form -->

</div>
</div>