<div class="wrapper">
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1>Frequently Asked Questions</h1>
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="/admin">Home</a></li>
                            <li class="breadcrumb-item">App Setting</li>
                            <li class="breadcrumb-item"><a href="/admin/getfaqform">F.A.Q.</a></li>
                            <!-- <% if(page_name === 'form') { %>
                            <% } %> -->
                        </ol>
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>

        <!-- Main content -->
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-9">
                        <!-- general form elements -->
                        <div class="card card-primary">
                            <div class="card-header">
                                <h3 class="card-title"></h3>
                            </div>
                            <!-- /.card-header -->
                            <!-- form start -->
                            <form method="post" action="/admin/addfaq">
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <div class="form-group">
                                                <label for="question">Question</label>
                                                <textarea class="form-control" name="question"
                                                    placeholder="write frequently asked questions here !" id="question"
                                                    wrap="virtual"></textarea>
                                            </div>
                                            <i class="nav-icon fas fa-long-arrow-alt-down"></i>
                                            <div class="form-group">
                                                <label for="answer">Answer</label>
                                                <div class="wrapper1">
                                                    <div class="input-box">
                                                        <div class="row">
                                                            <div class="col-md-11">
                                                                <textarea class="form-control mb-2" name="answer"
                                                                    placeholder="Step 1" id="answer" rows="3"></textarea>
                                                            </div>
                                                            <a class="add-faq mx-auto" alt="Add" title="Add"><i
                                                                    class="fa fa-plus mt-2"></i>
                                                            </a>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                            <button type="submit"
                                                class="btn btn-primary mt-5 float-right">Submit</button>
                                        </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>