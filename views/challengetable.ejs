<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Challeges Table</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="/admin">Home</a></li>
              <li class="breadcrumb-item active">Table</li>
              <li class="breadcrumb-item active">Challeges Table</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>
  
    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-12">
            <input class="form-control mb-1" type="text" id="myInput" onkeyup="filterTowns()" placeholder="Search: Enter User Name">
            <div class="card">
              <div class="card-body">
                <table class="table table-bordered table-hover sortable" id="myTable">
                  <thead>
                    <tr>
                      <th>Sr no</th>
                      <th>Challenge Name</th>
                      <th>Status</th>
                      <th>Goal</th>
                      <th>Reward</th>
                      <th>Duration</th>
                      <th>Action</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% data.forEach((challenge,index)=> {
                        let day = new Date(challenge.starttime).getDate();
                    let month = new Date(challenge.starttime).getMonth()+1;
                    let year = new Date(challenge.starttime).getFullYear();

                    var date = (day+"/"+month+"/"+year)
                      %>
                      <tr>
                        <td>
                          <%= (perpage * (current-1)) + index + 1  %>
                        </td>
                        <td>
                          <%= challenge.name %>
                        </td>
                        <td>
                          <%= challenge.status %>
                        </td>
                        <td>
                          <%= challenge.goal %> Steps
                        </td>
                        <td>
                          <%= challenge.reward %> UBS
                        </td>
                        <td>
                          <%= date %>
                        </td>
                        <td><a href="/admin/updatebazar/<%= challenge._id %>" class="btn btn-success" title="Edit" alt="Edit"><i
                            class="fa fa-edit"></i></a>&nbsp;
                            <a href="/admin/deletebazar/<%= challenge._id %>" class="btn btn-danger" title="Delete"
                          alt="Delete"><i class="fa fa-trash"></i></a></td>
                      </tr>
                      <% }) %>
                  </tbody>
                  <tfoot>
                    <tr>
                        <th>Sr no</th>
                        <th>Challenge Name</th>
                        <th>Status</th>
                        <th>Goal</th>
                        <th>Reward</th>
                        <th>Duration</th>
                        <th>Action</th>
                    </tr>
                  </tfoot>
                </table>
                <div class="mt-3">
                  <div class="text-center">
                    <% if (pages > 0) { %>
                    <ul class="pagination">
                      <% if (current == 1) { %>
                        <li class="page-item disabled"><a class="page-link">First</a></li>
                    <% } else { %>
                        <li><a class="page-link" href="/admin/bazartable/?page=1">First</a></li>
                    <% } %>
                    <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
                    <% if (i !== 1) { %>
                        <li class="page-item disabled"><a>...</a></li>
                    <% } %>
                    <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
                        <% if (i == current) { %>
                            <li class="page-item active"><a class="page-link"><%= i %></a></li>
                        <% } else { %>
                            <li><a class="page-link" href="/admin/bazartable/?page=<%= i %>"><%= i %></a></li>
                        <% } %>
                        <% if (i == Number(current) + 4 && i < pages) { %>
                            <li class="page-item disabled"><a class="page-link">...</a></li>
                        <% } %>
                    <% } %>
                    <% if (current == pages) { %>
                        <li class="page-item disabled"><a class="page-link">Last</a></li>
                    <% } else { %>
                        <li><a class="page-link" href="/admin/bazartable/?page=<%= pages %>">Last</a></li>
                    <% } %>
                    </ul>
                    <% } %>
                  </div>
                </div>
              </div>
              <!-- /.card-body -->
            </div>
          </div>
          <!-- /.col -->
        </div>
        <!-- /.row -->
      </div>
      <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->