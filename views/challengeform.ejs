<div class="wrapper">
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1>Create Challenges</h1>
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="/admin">Home</a></li>
                            <li class="breadcrumb-item">Forms</li>
                            <li class="breadcrumb-item">Challenges</li>
                            <!-- <% if(page_name === 'form') { %>
                            <% } %> -->
                        </ol>
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>

        <!-- Main content -->
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-8">
                        <!-- general form elements -->
                        <div class="card card-primary">
                            <div class="card-header">
                                <h3 class="card-title"></h3>
                            </div>
                            <!-- /.card-header -->
                            <!-- form start -->
                            <form method="post" action="/admin/createchallenge">
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <div class="form-group">
                                                <label for="name">Name Of Challenge:</label>
                                                <input type="text" name="name" class="form-control input-lg" id="name">
                                            </div>
                                        </div>
                                        <div class="col-lg-12">
                                            <div class="form-group">
                                                <label for="status">Status</label>
                                                <input type="text" name="status" class="form-control input-sm" id="status">
                                            </div>
                                        </div>
                                        <div class="col-lg-12">
                                            <div class="form-group row" style="margin-left: 0.1rem;">
                                                <div class="col-xs-3">
                                                    <label for="status">Goal</label>
                                                    <input type="number" name="goal" class="form-control input-sm" id="status">
                                                    <input type="text" class="" value="Steps" disabled >
                                                </div>
                                                <div class="col-xs-3 ml-1">
                                                    <label for="status">Reward</label>
                                                    <input type="number" name="reward" class="form-control input-sm" id="status">
                                                    <input type="text" class="" value="UBS Coin" disabled >
                                                </div>
                                                <div class="col-xs-3 ml-1">
                                                    <label for="status">Starting Time</label>
                                                    <input type="datetime-local" min="<%= time %>" name="starttime" class="form-control input-sm"
                                                        id="status">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-lg-12">
                                            <div class="form-group">
                                                <label for="status">About</label>
                                                <textarea id="" name="about" class="form-control" cols="30" rows="10"></textarea>
                                            </div>
                                            <div class="form-group row" style="margin-left: 0.1rem;">
                                                <div class="col-xs-3">
                                                    <label for="status">Expiry Time</label>
                                                    <input type="datetime-local" min="<%= time %>" name="expiretime" class="form-control input-sm"
                                                        id="status">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <button type="submit" class="btn btn-primary">Submit</button>
                                    <!-- /.card-body -->
                                    <div class="card-footer">

                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>